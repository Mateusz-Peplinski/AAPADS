<Window
    x:Class="AAPADS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AAPADS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AAPADS - Advanced Access Point Anomaly Detection System"
    Width="1100"
    Height="600"
    Background="{DynamicResource MaterialDesignDarkBackground}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <materialDesign:Card Background="#303030">
        <TabControl
            HorizontalContentAlignment="Left"
            materialDesign:ColorZoneAssist.Background="#424242"
            materialDesign:ColorZoneAssist.Foreground="#ffc107"
            materialDesign:ColorZoneAssist.Mode="Custom">
            <TabItem Name="overviewTab">
                <TabItem.Header>
                    <StackPanel MouseLeftButtonDown="overviewTab_Click" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#ffc107"
                            Kind="RouterNetworkWireless" />
                        <TextBlock Text="OVERVIEW" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20px" />
                        <!--  MENU  -->

                        <RowDefinition Height="300px" />
                        <!--  MAIN DISPLAY  -->

                        <RowDefinition Height="5px" />
                        <!--  LOAD BAR  -->

                        <RowDefinition Height="200px" />
                        <!--  SUMMARY  -->

                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>

                    <materialDesign:Card Grid.Row="0" Background="{DynamicResource MaterialDesignDarkBackground}">
                        <Menu materialDesign:MenuAssist.TopLevelMenuItemHeight="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type materialDesign:Card}}, Path=ActualHeight}" Background="{DynamicResource MaterialDesignDarkBackground}">
                            <Menu.Resources>
                                <Style BasedOn="{StaticResource MaterialDesignMenuItem}" TargetType="MenuItem">
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="Foreground" Value="#ffc107" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignDarkBackground}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Menu.Resources>
                            <MenuItem Header="File">
                                <MenuItem Header="Import Whitelist" />
                                <MenuItem Header="Import Blacklist" />
                                <MenuItem Header="Settings" />
                                <MenuItem
                                    Click="EXIT_Click"
                                    Foreground="Red"
                                    Header="Exit" />
                            </MenuItem>
                            <MenuItem Header="Edit">
                                <MenuItem Header="Item 1" />
                                <MenuItem Header="Item 2" />
                                <MenuItem Header="Item 3" />
                            </MenuItem>
                            <MenuItem Click="About_Click" Header="About" />
                        </Menu>
                    </materialDesign:Card>

                    <ScrollViewer Grid.Row="1">

                        <ListView
                            x:Name="MAIN_OVERVIEW_TABLE"
                            Foreground="#ffc107"
                            ItemsSource="{Binding AccessPoints}">
                            <ListView.View>

                                <GridView>
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="GridViewColumnHeader">
                                            <Setter Property="Foreground" Value="#ffc107" />
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>
                                    <GridViewColumn Header="AP">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <materialDesign:PackIcon Margin="0,0,0,0" Kind="Wifi" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="BSSID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="Green"
                                                    Text="{Binding BSSID}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="SSID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=GridViewColumnHeader}}">
                                                    <TextBlock Foreground="Green" Text="{Binding SSID}" />
                                                </DockPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="STRENGTH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock TextAlignment="Center">
                                                    <TextBlock.Text>
                                                        <Binding Path="RSSI" StringFormat="{}{0}%" />
                                                    </TextBlock.Text>
                                                    <TextBlock.Foreground>
                                                        <Binding Path="RSSI">
                                                            <Binding.Converter>
                                                                <local:RSSIColorConverter />
                                                            </Binding.Converter>
                                                        </Binding>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>


                                    <GridViewColumn Header="WLAN STANDARD">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#ffc107"
                                                    Text="{Binding WLAN_STANDARD}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="CH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#ffc107"
                                                    Text="{Binding WIFI_CHANNEL}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="BAND">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#ffc107"
                                                    Text="{Binding FREQ_BAND}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="FREQ">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#ffc107"
                                                    Text="{Binding FREQUENCY}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ENC">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#1de9b6"
                                                    Text="{Binding ENCRYPTION_USED}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="AUTH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="#1de9b6"
                                                    Text="{Binding AUTHENTICATION}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="#424242" />
                                    <Setter Property="Foreground" Value="#ffc107" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                    <ProgressBar Grid.Row="2" IsIndeterminate="True">
                        <ProgressBar.Style>
                            <Style BasedOn="{StaticResource {x:Type ProgressBar}}" TargetType="ProgressBar">
                                <Setter Property="Foreground" Value="#ffc107" />
                                <Setter Property="Background" Value="#ffc107" />

                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>

                    <ScrollViewer Grid.Row="3">

                        <Border Background="{DynamicResource MaterialDesignDarkBackground}">
                            <GroupBox
                                materialDesign:ColorZoneAssist.Background="#ffc107"
                                materialDesign:ColorZoneAssist.Foreground="Black"
                                materialDesign:ColorZoneAssist.Mode="Custom"
                                Header="Custom Header">

                                <GroupBox.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="SUMMARY" />
                                    </DataTemplate>
                                </GroupBox.HeaderTemplate>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Foreground="Beige">
                                            <Run FontWeight="Bold" Text="ACCESS POINTS DETECTED:" />
                                            <Run Foreground="OrangeRed" Text="{Binding TOTAL_DETECTED_AP}" />
                                        </TextBlock>
                                        <TextBlock Foreground="Beige">
                                            <Run FontWeight="Bold" Text="SECURE ACCESS POINTS: " />
                                            <Run Foreground="OrangeRed" Text="{Binding TOTAL_SECURE_AP}" />
                                        </TextBlock>
                                        <TextBlock Foreground="Beige">
                                            <Run FontWeight="Bold" Text="VULNERABLE ACCESS POINTS: " />
                                            <Run Foreground="OrangeRed" Text="{Binding TOTAL_VULNERABLE_AP}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <Button
                                        Grid.Column="1"
                                        Margin="2,0"
                                        materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                        materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                        materialDesign:ButtonProgressAssist.Value="-1"
                                        Background="#ffc107"
                                        BorderThickness="0"
                                        Foreground="Black"
                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                        Style="{StaticResource MaterialDesignRaisedButton}">

                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="RefreshCircle" />
                                                <TextBlock Margin="5,0,0,0" Text="Refresh" />
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </GroupBox>
                        </Border>

                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Name="DetectionsTab">
                <TabItem.Header>
                    <StackPanel MouseLeftButtonDown="detectionsTab_Click" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#ffc107"
                            Kind="WifiStrength4Alert" />
                        <TextBlock Text="DETECTIONS" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer Grid.Row="1">

                    <ListView
                        x:Name="DETECTION_TABLE"
                        Foreground="#ffc107"
                        ItemsSource="{Binding DETECTIONS}">
                        <ListView.View>

                            <GridView>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#ffc107" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>
                                <GridViewColumn Header="BSSID">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="Green" Text="{Binding BSSID}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="SSID">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="Green" Text="{Binding SSID}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="CRITICALITY">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Foreground="#ffc107" Text="{Binding WIFI_CHANNEL}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="#424242" />
                                <Setter Property="Foreground" Value="#ffc107" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#ffc107"
                            Kind="Console" />
                        <TextBlock Text="COMMAND &amp; CONTROL CENTER" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Margin="8" Text="Secondary example tab 3333" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#ffc107"
                            Kind="AccessPointNetwork" />
                        <TextBlock Text="NETWORK ADAPTERS" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Margin="8" Text="Secondary example tab 3333" />
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</Window>
