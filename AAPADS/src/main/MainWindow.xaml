<Window
    x:Class="AAPADS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:local="clr-namespace:AAPADS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="AAPADS - Advanced Access Point Anomaly Detection System"
    Width="1100"
    Height="800"
    Background="{DynamicResource MaterialDesignDarkBackground}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Window.Resources>

        <local:RSSIIconConverter x:Key="RSSIIconConverter" />
        <local:RSSIColorConverter x:Key="RSSIColorConverter" />
        <local:FrequencyBandColorConverter x:Key="FrequencyBandColorConverter" />
        <local:ChannelColorConverter x:Key="ChannelColorConverter" />
        <local:FrequencyColorConverter x:Key="FrequencyColorConverter" />
        <local:CriticalityLevelToColorConverter x:Key="CriticalityColorConverter" />
        <local:CriticalityLevelToTextConverter x:Key="CriticalityTextConverter" />
        <local:DetectionStatusToColorConverter x:Key="DetectionStatusToColorConverter" />

        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">

            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />

        </Style>


        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#ef3945" />

    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Custom Title Bar  -->
        <Border Background="#333" PreviewMouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Icon  -->
                <Image
                    Width="20"
                    Height="20"
                    Margin="10,0,10,0"
                    Source="..\..\res\icons\icon.png" />

                <!--  Title  -->
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="AAPADS - Advanced Access Point Anomaly Detection System" />

                <!--  Window Control Buttons  -->
                <Button
                    x:Name="MinimizeButton"
                    Grid.Column="2"
                    Width="50"
                    Height="30"
                    Padding="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="_"
                    Foreground="#d2d2d2" />
                <Button
                    x:Name="MaximizeButton"
                    Grid.Column="3"
                    Width="50"
                    Height="30"
                    Padding="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="□"
                    Foreground="#d2d2d2" />
                <Button
                    x:Name="CloseButton"
                    Grid.Column="4"
                    Width="50"
                    Height="30"
                    Padding="0"
                    Background="#ef3945"
                    BorderBrush="#ef3945"
                    Content="X"
                    Foreground="#d2d2d2" />
            </Grid>
        </Border>

        <!--  Your Window Content Goes Here  -->
        <Grid Grid.Row="1">
            <materialDesign:Card Background="#303030">
                <TabControl
                    HorizontalContentAlignment="Left"
                    materialDesign:ColorZoneAssist.Background="#424242"
                    materialDesign:ColorZoneAssist.Foreground="#ef3945"
                    materialDesign:ColorZoneAssist.Mode="Custom"
                    SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Name="OverviewTab">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Margin="0,0,5,0"
                                    Foreground="#ef3945"
                                    Kind="RouterNetworkWireless" />
                                <TextBlock Text="OVERVIEW" />
                            </StackPanel>
                        </TabItem.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <!--  MAIN DISPLAY  -->

                                <RowDefinition Height="5" />
                                <!--  LOADING  -->

                                <RowDefinition Height="Auto" />
                                <!--  SUMMARY  -->

                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">

                                <Border
                                    Margin="5,5,5,0"
                                    Padding="2"
                                    Background="#424242"
                                    CornerRadius="5">
                                    <DataGrid
                                        x:Name="MAIN_OVERVIEW_TABLE"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        materialDesign:DataGridAssist.CellPadding="16 8"
                                        materialDesign:DataGridAssist.ColumnHeaderPadding="16 8"
                                        AutoGenerateColumns="False"
                                        Background="#424242"
                                        BorderBrush="Transparent"
                                        CanUserAddRows="False"
                                        CanUserSortColumns="True"
                                        CellStyle="{StaticResource DataGridCellStyle}"
                                        DockPanel.Dock="Top"
                                        FontFamily="Consolas"
                                        FontSize="14"
                                        Foreground="Transparent"
                                        HorizontalScrollBarVisibility="Disabled"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding AccessPoints}"
                                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Setter Property="Background" Value="#303030" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="DataGridRow">
                                                            <Border
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="Transparent"
                                                                BorderThickness="1"
                                                                CornerRadius="5">
                                                                <SelectiveScrollingGrid>
                                                                    <SelectiveScrollingGrid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </SelectiveScrollingGrid.ColumnDefinitions>
                                                                    <SelectiveScrollingGrid.RowDefinitions>
                                                                        <RowDefinition Height="*" />
                                                                        <RowDefinition Height="Auto" />
                                                                    </SelectiveScrollingGrid.RowDefinitions>
                                                                    <DataGridCellsPresenter
                                                                        Grid.Column="1"
                                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                    <DataGridDetailsPresenter
                                                                        Grid.Row="1"
                                                                        Grid.Column="1"
                                                                        SelectiveScrollingGrid.SelectiveScrollingOrientation="{Binding AreRowDetailsFrozen, ConverterParameter={x:Static SelectiveScrollingOrientation.Vertical}, Converter={x:Static DataGrid.RowDetailsScrollingConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                                        Visibility="{TemplateBinding DetailsVisibility}" />
                                                                    <DataGridRowHeader
                                                                        Grid.RowSpan="2"
                                                                        SelectiveScrollingGrid.SelectiveScrollingOrientation="Vertical"
                                                                        Visibility="{Binding HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Row}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                                                                </SelectiveScrollingGrid>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Resources>
                                                    <Storyboard x:Key="MouseOverAnimation">
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="Background.Color"
                                                            To="#424242"
                                                            Duration="0:0:0.3" />
                                                    </Storyboard>
                                                    <Storyboard x:Key="MouseOutAnimation">
                                                        <ColorAnimation
                                                            Storyboard.TargetProperty="Background.Color"
                                                            To="#303030"
                                                            Duration="0:0:0.3" />
                                                    </Storyboard>
                                                </Style.Resources>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard Storyboard="{StaticResource MouseOverAnimation}" />
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard Storyboard="{StaticResource MouseOutAnimation}" />
                                                        </Trigger.ExitActions>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>
                                        <DataGrid.Columns>
                                            <DataGridTemplateColumn
                                                Width="100"
                                                Header="STRENGTH"
                                                SortMemberPath="RSSI">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                            <materialDesign:PackIcon Foreground="{Binding RSSI, Converter={StaticResource RSSIColorConverter}}" Kind="{Binding RSSI, Converter={StaticResource RSSIIconConverter}}" />
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="{Binding RSSI, StringFormat={}{0}%}"
                                                                TextAlignment="Left" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>

                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding BSSID}"
                                                Foreground="#d2d2d2"
                                                Header="BSSID"
                                                SortMemberPath="BSSID">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding SSID}"
                                                Foreground="#d2d2d2"
                                                Header="SSID"
                                                SortMemberPath="SSID">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding WLAN_STANDARD}"
                                                Foreground="#d2d2d2"
                                                Header="STANDARD"
                                                SortMemberPath="WLAN_STANDARD">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="50"
                                                Binding="{Binding WIFI_CHANNEL}"
                                                Header="CH"
                                                SortMemberPath="WLAN_STANDARD">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                        <Setter Property="Foreground" Value="{Binding WIFI_CHANNEL, Converter={StaticResource ChannelColorConverter}}" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding FREQ_BAND}"
                                                Header="BAND"
                                                SortMemberPath="FREQ_BAND">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                        <Setter Property="Foreground" Value="{Binding FREQ_BAND, Converter={StaticResource FrequencyBandColorConverter}}" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding FREQUENCY}"
                                                Header="FREQ"
                                                SortMemberPath="FREQUENCY">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                        <Setter Property="Foreground" Value="{Binding FREQUENCY, Converter={StaticResource FrequencyColorConverter}}" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="100"
                                                Binding="{Binding ENCRYPTION_USED}"
                                                Foreground="#d2d2d2"
                                                Header="ENC"
                                                SortMemberPath="ENCRYPTION_USED">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding AUTHENTICATION}"
                                                Foreground="#d2d2d2"
                                                Header="AUTH"
                                                SortMemberPath="AUTHENTICATION">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Left" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>

                                        </DataGrid.Columns>

                                    </DataGrid>

                                </Border>

                            </Grid>
                            <Grid Grid.Row="1" Panel.ZIndex="1">
                                <ProgressBar
                                    Margin="5,0,5,0"
                                    IsIndeterminate="True"
                                    Visibility="{Binding IS_LOADING, Converter={StaticResource BoolToVisConverter}}"
                                    Value="50">
                                    <ProgressBar.Style>
                                        <Style BasedOn="{StaticResource {x:Type ProgressBar}}" TargetType="ProgressBar">
                                            <Setter Property="Foreground" Value="#ef3945" />
                                            <Setter Property="Background" Value="#ef3945" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>

                            </Grid>
                            <StackPanel Grid.Row="2" DockPanel.Dock="Bottom">
                                <materialDesign:Card Margin="5,0,5,5" Background="#303030">
                                    <TabControl
                                        x:Name="SummarySection"
                                        Height="{Binding SummarySectionHeight}"
                                        HorizontalContentAlignment="Left"
                                        materialDesign:ColorZoneAssist.Background="#424242"
                                        materialDesign:ColorZoneAssist.Foreground="#ef3945"
                                        materialDesign:ColorZoneAssist.Mode="Custom">
                                        <TabItem Header="SUMMARY">
                                            <DockPanel LastChildFill="True">
                                                <StackPanel Margin="5,5,0,0" DockPanel.Dock="Left">
                                                    <Border
                                                        Margin="2"
                                                        Padding="2"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Column="0"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="ACCESS POINTS DETECTED:" />
                                                            <Border
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                Padding="5"
                                                                Background="#ef3945"
                                                                CornerRadius="5">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    Foreground="White"
                                                                    Text="{Binding TOTAL_DETECTED_AP}" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                    <Border
                                                        Margin="2"
                                                        Padding="2"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Column="0"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="SECURE ACCESS POINTS:" />
                                                            <Border
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                Padding="5"
                                                                Background="#ef3945"
                                                                CornerRadius="5">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    Foreground="White"
                                                                    Text="{Binding TOTAL_SECURE_AP}" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                    <Border
                                                        Margin="2"
                                                        Padding="2"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Column="0"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="2.4 GHz NETWORKS:" />
                                                            <Border
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                Padding="5"
                                                                Background="#ef3945"
                                                                CornerRadius="5">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    Foreground="White"
                                                                    Text="{Binding TOTAL_2_4_GHz_AP}" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                    <Border
                                                        Margin="2"
                                                        Padding="2"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Column="0"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="5 GHz NETWORKS:" />
                                                            <Border
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                Padding="5"
                                                                Background="#ef3945"
                                                                CornerRadius="5">
                                                                <TextBlock
                                                                    VerticalAlignment="Center"
                                                                    Foreground="White"
                                                                    Text="{Binding TOTAL_5_GHz_AP}" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                    <Border
                                                        Height="120"
                                                        Margin="2,5,2,5"
                                                        Padding="3"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <!--  Row for the title  -->
                                                                <RowDefinition Height="*" />
                                                                <!--  Row for the gauge  -->
                                                            </Grid.RowDefinitions>
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                HorizontalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                Text="AVERAGE SIGNAL STRENGTH" />
                                                            <liveCharts:AngularGauge
                                                                Grid.Row="1"
                                                                Margin="5"
                                                                FontSize="10"
                                                                FontWeight="Bold"
                                                                Foreground="#d2d2d2"
                                                                FromValue="0"
                                                                LabelsStep="10"
                                                                SectionsInnerRadius=".5"
                                                                TicksForeground="#d2d2d2"
                                                                TicksStep="10"
                                                                ToValue="100"
                                                                Wedge="300"
                                                                Value="{Binding AVG_SIGNAL_STRENGTH}">
                                                                <liveCharts:AngularGauge.Sections>
                                                                    <liveCharts:AngularSection
                                                                        Fill="#ff002a"
                                                                        FromValue="0"
                                                                        ToValue="30" />
                                                                    <liveCharts:AngularSection
                                                                        Fill="#ff9c00"
                                                                        FromValue="30"
                                                                        ToValue="60" />
                                                                    <liveCharts:AngularSection
                                                                        Fill="#ffe000"
                                                                        FromValue="60"
                                                                        ToValue="80" />
                                                                    <liveCharts:AngularSection
                                                                        Fill="#00ee6c"
                                                                        FromValue="80"
                                                                        ToValue="100" />
                                                                </liveCharts:AngularGauge.Sections>
                                                            </liveCharts:AngularGauge>
                                                        </Grid>
                                                    </Border>
                                                    <Border
                                                        Margin="5,5,5,5"
                                                        Padding="2"
                                                        Background="#424242"
                                                        CornerRadius="5">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <Button
                                                                materialDesign:RippleAssist.Feedback="#DD000000"
                                                                Background="#ef3945"
                                                                BorderBrush="#ef3945"
                                                                Click="AccessPointRadar_Click"
                                                                Content="ACCESS POINT RADAR"
                                                                FontWeight="Bold"
                                                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                                ToolTip="Resource name: MaterialDesignRaisedSecondaryButton" />
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                                <Border
                                                    Margin="5"
                                                    Padding="2"
                                                    Background="#424242"
                                                    CornerRadius="5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="207*" />
                                                            <ColumnDefinition Width="100*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <liveCharts:CartesianChart
                                                            Name="chart"
                                                            Grid.RowSpan="2"
                                                            Grid.ColumnSpan="2"
                                                            Margin="0,0,0,10"
                                                            LegendLocation="Bottom"
                                                            Series="{Binding FrequencySeriesCollection}">
                                                            <liveCharts:CartesianChart.AxisX>
                                                                <liveCharts:Axis
                                                                    LabelFormatter="{Binding DateTimeFormatter}"
                                                                    MaxValue="{Binding AxisMax}"
                                                                    MinValue="{Binding AxisMin}" />
                                                            </liveCharts:CartesianChart.AxisX>
                                                            <liveCharts:CartesianChart.AxisY>
                                                                <liveCharts:Axis LabelFormatter="{Binding YAxisFormatter}">
                                                                    <liveCharts:Axis.Separator>
                                                                        <liveCharts:Separator Step="1" />
                                                                    </liveCharts:Axis.Separator>
                                                                </liveCharts:Axis>
                                                            </liveCharts:CartesianChart.AxisY>

                                                        </liveCharts:CartesianChart>
                                                    </Grid>
                                                </Border>
                                            </DockPanel>
                                        </TabItem>
                                        <TabItem Header="2.4 GHz ALLOCATION CHART">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="13*" />
                                                </Grid.ColumnDefinitions>
                                                <liveCharts:CartesianChart
                                                    Name="channelAllocation24GHz"
                                                    Grid.ColumnSpan="2"
                                                    Series="{Binding ChannelAllocationSeries24GHz}">

                                                    <liveCharts:CartesianChart.AxisX>
                                                        <liveCharts:Axis
                                                            Title="Frequency (MHz)"
                                                            MaxValue="2497"
                                                            MinValue="2402">
                                                            <liveCharts:Axis.Separator>
                                                                <liveCharts:Separator
                                                                    Step="5"
                                                                    Stroke="Gray"
                                                                    StrokeThickness="1" />
                                                            </liveCharts:Axis.Separator>
                                                        </liveCharts:Axis>
                                                    </liveCharts:CartesianChart.AxisX>
                                                    <liveCharts:CartesianChart.AxisY>
                                                        <liveCharts:Axis
                                                            Title="RSSI (dBm)"
                                                            MaxValue="0"
                                                            MinValue="-100">
                                                            <liveCharts:Axis.Separator>
                                                                <liveCharts:Separator Stroke="Gray" StrokeThickness="1" />
                                                            </liveCharts:Axis.Separator>
                                                        </liveCharts:Axis>
                                                    </liveCharts:CartesianChart.AxisY>

                                                </liveCharts:CartesianChart>
                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="5 GHz ALLOCATION CHART">
                                            <Grid>
                                                <Grid.Resources>
                                                    <DataTemplate x:Key="CustomLabelTemplate">
                                                        <TextBlock Foreground="Red" Text="{Binding}" />
                                                    </DataTemplate>
                                                </Grid.Resources>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="37*" />
                                                    <ColumnDefinition Width="13*" />
                                                </Grid.ColumnDefinitions>
                                                <liveCharts:CartesianChart
                                                    Name="channelAllocation5GHz"
                                                    Grid.ColumnSpan="2"
                                                    Series="{Binding ChannelAllocationSeries5GHz}">

                                                    <liveCharts:CartesianChart.AxisX>
                                                        <liveCharts:Axis
                                                            Title="Frequency (MHz)"
                                                            MaxValue="5835"
                                                            MinValue="5170">
                                                            <liveCharts:Axis.Separator>
                                                                <liveCharts:Separator
                                                                    Step="20"
                                                                    Stroke="Gray"
                                                                    StrokeThickness="1" />

                                                            </liveCharts:Axis.Separator>
                                                        </liveCharts:Axis>
                                                    </liveCharts:CartesianChart.AxisX>
                                                    <liveCharts:CartesianChart.AxisY>
                                                        <liveCharts:Axis
                                                            Title="RSSI (dBm)"
                                                            MaxValue="0"
                                                            MinValue="-100">
                                                            <liveCharts:Axis.Separator>
                                                                <liveCharts:Separator Stroke="Gray" StrokeThickness="1" />
                                                            </liveCharts:Axis.Separator>
                                                        </liveCharts:Axis>
                                                    </liveCharts:CartesianChart.AxisY>
                                                </liveCharts:CartesianChart>

                                            </Grid>
                                        </TabItem>
                                        <TabItem Header="6 GHz ALLOCATION CHART">
