<Window
    x:Class="AAPADS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AAPADS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AAPADS - Advanced Access Point Anomaly Detection System"
    Width="1100"
    Height="600"
    Background="{DynamicResource MaterialDesignDarkBackground}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">
    <Window.Resources>
        <local:RSSIIconConverter x:Key="RSSIIconConverter" />
        <local:RSSIColorConverter x:Key="RSSIColorConverter" />
        <local:FrequencyBandColorConverter x:Key="FrequencyBandColorConverter" />
        <local:ChannelColorConverter x:Key="ChannelColorConverter" />
        <local:FrequencyColorConverter x:Key="FrequencyColorConverter" />
        <local:CriticalityLevelToColorConverter x:Key="CriticalityColorConverter" />
        <local:CriticalityLevelToTextConverter x:Key="CriticalityTextConverter" />
    </Window.Resources>

    <materialDesign:Card Background="#303030">
        <TabControl
            HorizontalContentAlignment="Left"
            materialDesign:ColorZoneAssist.Background="#424242"
            materialDesign:ColorZoneAssist.Foreground="#08b4ca"
            materialDesign:ColorZoneAssist.Mode="Custom">
            <TabItem Name="overviewTab">
                <TabItem.Header>
                    <StackPanel MouseLeftButtonDown="overviewTab_Click" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#08b4ca"
                            Kind="RouterNetworkWireless" />
                        <TextBlock Text="OVERVIEW" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20px" />
                        <!--  MENU  -->

                        <RowDefinition Height="300px" />
                        <!--  MAIN DISPLAY  -->

                        <RowDefinition Height="5px" />
                        <!--  LOAD BAR  -->

                        <RowDefinition Height="200px" />
                        <!--  SUMMARY  -->

                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>

                    <materialDesign:Card Grid.Row="0" Background="{DynamicResource MaterialDesignDarkBackground}">
                        <Menu materialDesign:MenuAssist.TopLevelMenuItemHeight="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type materialDesign:Card}}, Path=ActualHeight}" Background="{DynamicResource MaterialDesignDarkBackground}">
                            <Menu.Resources>
                                <Style BasedOn="{StaticResource MaterialDesignMenuItem}" TargetType="MenuItem">
                                    <Setter Property="FontSize" Value="12" />
                                    <Setter Property="Foreground" Value="#08b4ca" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource MaterialDesignDarkBackground}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Menu.Resources>
                            <MenuItem Header="File">
                                <MenuItem Header="Import Whitelist" />
                                <MenuItem Header="Import Blacklist" />
                                <MenuItem Header="Settings" />
                                <MenuItem
                                    Click="EXIT_Click"
                                    Foreground="Red"
                                    Header="Exit" />
                            </MenuItem>
                            <MenuItem Header="Edit">
                                <MenuItem Header="Item 1" />
                                <MenuItem Header="Item 2" />
                                <MenuItem Header="Item 3" />
                            </MenuItem>
                            <MenuItem Click="About_Click" Header="About" />
                        </Menu>
                    </materialDesign:Card>

                    <ScrollViewer Grid.Row="1">

                        <ListView
                            x:Name="MAIN_OVERVIEW_TABLE"
                            Foreground="AntiqueWhite"
                            ItemsSource="{Binding AccessPoints}">
                            <ListView.View>

                                <GridView>
                                    <GridView.ColumnHeaderContainerStyle>
                                        <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="GridViewColumnHeader">
                                            <Setter Property="Foreground" Value="#08b4ca" />
                                        </Style>
                                    </GridView.ColumnHeaderContainerStyle>

                                    <GridViewColumn Header="STRENGTH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                    <materialDesign:PackIcon Foreground="{Binding RSSI, Converter={StaticResource RSSIColorConverter}}" Kind="{Binding RSSI, Converter={StaticResource RSSIIconConverter}}" />
                                                    <TextBlock
                                                        FontWeight="Bold"
                                                        Foreground="AntiqueWhite"
                                                        Text="{Binding RSSI, StringFormat={}{0}%}"
                                                        TextAlignment="Center" />
                                                </StackPanel>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="BSSID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="AntiqueWhite"
                                                    Text="{Binding BSSID}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="SSID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource AncestorType=GridViewColumnHeader}}">
                                                    <TextBlock Foreground="AntiqueWhite" Text="{Binding SSID}" />
                                                </DockPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="STANDARD">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="AntiqueWhite"
                                                    Text="{Binding WLAN_STANDARD}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="CH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="{Binding WIFI_CHANNEL, Converter={StaticResource ChannelColorConverter}}"
                                                    Text="{Binding WIFI_CHANNEL}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="BAND">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="{Binding FREQ_BAND, Converter={StaticResource FrequencyBandColorConverter}}"
                                                    Text="{Binding FREQ_BAND}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="FREQ">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="{Binding FREQUENCY, Converter={StaticResource FrequencyColorConverter}}"
                                                    Text="{Binding FREQUENCY}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ENC">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="AntiqueWhite"
                                                    Text="{Binding ENCRYPTION_USED}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="AUTH">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Foreground="AntiqueWhite"
                                                    Text="{Binding AUTHENTICATION}"
                                                    TextAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="#424242" />
                                    <Setter Property="Foreground" Value="#08b4ca" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="0">
                                                    <GridViewRowPresenter
                                                        Width="{TemplateBinding Width}"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                        Content="{TemplateBinding Content}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Black" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>
                    <ProgressBar Grid.Row="2" IsIndeterminate="True">
                        <ProgressBar.Style>
                            <Style BasedOn="{StaticResource {x:Type ProgressBar}}" TargetType="ProgressBar">
                                <Setter Property="Foreground" Value="#08b4ca" />
                                <Setter Property="Background" Value="#08b4ca" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>

                    <ScrollViewer Grid.Row="3">

                        <Border Background="{DynamicResource MaterialDesignDarkBackground}">
                            <GroupBox
                                materialDesign:ColorZoneAssist.Background="#08b4ca"
                                materialDesign:ColorZoneAssist.Foreground="Black"
                                materialDesign:ColorZoneAssist.Mode="Custom"
                                Header="Custom Header">

                                <GroupBox.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="SUMMARY" />
                                    </DataTemplate>
                                </GroupBox.HeaderTemplate>
                                <Grid>
                                    <materialDesign:Card>
                                        <TabControl Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="Right">
                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Width="auto" Height="auto">
                                                        <materialDesign:PackIcon
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"
                                                            Foreground="AntiqueWhite"
                                                            Kind="NoteSearchOutline" />
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="AntiqueWhite"
                                                            Text="SUMMARY" />
                                                    </StackPanel>
                                                </TabItem.Header>

                                                <DockPanel LastChildFill="True">
                                                    <StackPanel DockPanel.Dock="Left">
                                                        <Border
                                                            Margin="2"
                                                            Padding="2"
                                                            Background="#424242"
                                                            CornerRadius="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Foreground="Beige"
                                                                    Text="ACCESS POINTS DETECTED:" />
                                                                <Border
                                                                    Grid.Column="1"
                                                                    Margin="5,0,0,0"
                                                                    Padding="5"
                                                                    Background="OrangeRed"
                                                                    CornerRadius="5">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        Foreground="White"
                                                                        Text="{Binding TOTAL_DETECTED_AP}" />
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border
                                                            Margin="2"
                                                            Padding="2"
                                                            Background="#424242"
                                                            CornerRadius="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Foreground="Beige"
                                                                    Text="SECURE ACCESS POINTS:" />
                                                                <Border
                                                                    Grid.Column="1"
                                                                    Margin="5,0,0,0"
                                                                    Padding="5"
                                                                    Background="OrangeRed"
                                                                    CornerRadius="5">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        Foreground="White"
                                                                        Text="{Binding TOTAL_DETECTED_AP}" />
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border
                                                            Margin="2"
                                                            Padding="2"
                                                            Background="#424242"
                                                            CornerRadius="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Foreground="Beige"
                                                                    Text="2.4 Ghz NETWORKS:" />
                                                                <Border
                                                                    Grid.Column="1"
                                                                    Margin="5,0,0,0"
                                                                    Padding="5"
                                                                    Background="OrangeRed"
                                                                    CornerRadius="5">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        Foreground="White"
                                                                        Text="{Binding TOTAL_DETECTED_AP}" />
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border
                                                            Margin="2"
                                                            Padding="2"
                                                            Background="#424242"
                                                            CornerRadius="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center"
                                                                    FontWeight="Bold"
                                                                    Foreground="Beige"
                                                                    Text="5 Ghz NETWORKS:" />
                                                                <Border
                                                                    Grid.Column="1"
                                                                    Margin="5,0,0,0"
                                                                    Padding="5"
                                                                    Background="OrangeRed"
                                                                    CornerRadius="5">
                                                                    <TextBlock
                                                                        VerticalAlignment="Center"
                                                                        Foreground="White"
                                                                        Text="{Binding TOTAL_DETECTED_AP}" />
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </StackPanel>
                                                    <GroupBox Width="750" Header="LIVE CONSOLE">
                                                        <GroupBox.HeaderTemplate>
                                                            <DataTemplate>
                                                                <TextBlock
                                                                    FontWeight="Bold"
                                                                    Text="LIVE CONSOLE"
                                                                    TextAlignment="Center" />
                                                            </DataTemplate>
                                                        </GroupBox.HeaderTemplate>
                                                        <TextBox
                                                            Foreground="Beige"
                                                            IsHitTestVisible="False"
                                                            IsReadOnly="True"
                                                            Text="{Binding LiveLog, Mode=OneWay}"
                                                            TextWrapping="Wrap"
                                                            VerticalScrollBarVisibility="Auto" />
                                                    </GroupBox>
                                                </DockPanel>
                                            </TabItem>

                                            <TabItem>
                                                <TabItem.Header>
                                                    <StackPanel Width="auto" Height="auto">
                                                        <materialDesign:PackIcon
                                                            Width="24"
                                                            Height="24"
                                                            HorizontalAlignment="Center"
                                                            Foreground="AntiqueWhite"
                                                            Kind="ChartBellCurve" />
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="AntiqueWhite"
                                                            Text="GRAPH" />
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <TextBlock>
                                                    <Run Text="tab 2 content. Default look and behaviors." />
                                                    <LineBreak />
                                                    <LineBreak />
                                                    <Run FontStyle="Italic">
                                                        Praesent sed dui arcu. Vivamus porta auctor sagittis
                                                    </Run>
                                                </TextBlock>
                                            </TabItem>
                                        </TabControl>
                                    </materialDesign:Card>
                                </Grid>
                            </GroupBox>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Name="DetectionsTab">
                <TabItem.Header>
                    <StackPanel MouseLeftButtonDown="detectionsTab_Click" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#08b4ca"
                            Kind="WifiStrength4Alert" />
                        <TextBlock Text="DETECTIONS" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer Grid.Row="1">

                    <ListView
                        x:Name="DETECTION_TABLE"
                        Foreground="#08b4ca"
                        ItemsSource="{Binding DETECTIONS}">
                        <ListView.View>

                            <GridView>
                                <GridView.ColumnHeaderContainerStyle>
                                    <Style BasedOn="{StaticResource {x:Type GridViewColumnHeader}}" TargetType="GridViewColumnHeader">
                                        <Setter Property="Foreground" Value="#08b4ca" />
                                    </Style>
                                </GridView.ColumnHeaderContainerStyle>

                                <GridViewColumn Header="CRITICALITY">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Width="100" Background="{Binding CRITICAILITY_LEVEL, Converter={StaticResource CriticalityColorConverter}}">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontWeight="Bold"
                                                    Foreground="Black"
                                                    Text="{Binding CRITICAILITY_LEVEL, Converter={StaticResource CriticalityTextConverter}}" />
                                            </Grid>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>




                            </GridView>
                        </ListView.View>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="#424242" />
                                <Setter Property="Foreground" Value="#08b4ca" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="Transparent"
                                                BorderThickness="0">
                                                <GridViewRowPresenter
                                                    Width="{TemplateBinding Width}"
                                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                    Content="{TemplateBinding Content}" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Black" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Black" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#08b4ca"
                            Kind="Console" />
                        <TextBlock Text="COMMAND &amp; CONTROL CENTER" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Margin="8" Text="Secondary example tab 3333" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Margin="0,0,5,0"
                            Foreground="#08b4ca"
                            Kind="AccessPointNetwork" />
                        <TextBlock Text="NETWORK ADAPTERS" />
                    </StackPanel>
                </TabItem.Header>
                <TextBlock Margin="8" Text="Secondary example tab 3333" />
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</Window>
