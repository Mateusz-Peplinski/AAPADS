<Window
    x:Class="AAPADS.loadingScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:AAPADS"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AAPADS"
    Width="600"
    Height="450"
    Icon="/icon.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" CornerRadius="20" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.Background>
            <ImageBrush>
                <ImageBrush.ImageSource>
                    <BitmapImage UriSource="/res/graphics/animated.gif" />
                </ImageBrush.ImageSource>
            </ImageBrush>
        </Grid.Background>
        <Image gif:ImageBehavior.AnimatedSource="/res/graphics/animated.gif" Stretch="UniformToFill" />
        <ProgressBar
            Margin="281,384,299,30"
            Foreground="#ff002a"
            IsIndeterminate="True"
            Style="{StaticResource MaterialDesignCircularProgressBar}"
            Value="0" />
    </Grid>


</Window>
